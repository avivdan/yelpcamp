<% include partials/header %>

<h1 style="text-align: center;"> Add new Campground to our Database </h1>
<div class="row">
    <div class="container" style="width:30%; margin:15px auto;">
        <form action = "/campgrounds" method="POST">
            <div class="form-group">
                 <input class="form-control" type ="text" name="name" placeholder = "name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit</button>
            </div>
            <div class="form-group">
                <a class="btn btn-sm btn-default" href="/campgrounds">Go Back</a>
            </div>

        </form>        
    </div>                
</div>


