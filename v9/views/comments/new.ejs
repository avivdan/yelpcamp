<% include ../partials/header %>

<h1 style="text-align: center;"> Add new comment to <%= campground.name %> </h1>
<div class="row">
    <div class="container" style="width:30%; margin:15px auto;">
        <form action = "/index/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit</button>
            </div>
            <div class="form-group">
                <a class="btn btn-sm btn-default" href="/index">Go Back</a>
            </div>

        </form>        
    </div>                
</div>


<% include ../partials/footer %>
