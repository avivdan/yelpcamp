<% include ../partials/header %>

<h1 style="text-align: center;"> edit Comment </h1>
<div class="row">
    <div class="container" style="width:30%; margin:15px auto;">
        <form action = "/index/<%= campground_id %>/comments/<%=comment._id%>/?_method=PUT" method="POST">
            <div class="form-group">
                 <input class="form-control" type ="text" name="comment[text]" placeholder = "name" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit</button>
            </div>
            <div class="form-group">
                <a class="btn btn-sm btn-default" href="/index/<%= campground._id %>">Go Back</a>
            </div>

        </form>        
    </div>                
</div>
<% include ../partials/footer %>
